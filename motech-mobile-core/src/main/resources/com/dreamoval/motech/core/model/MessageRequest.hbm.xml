<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dreamoval.motech.core.model">
  <union-subclass extends="MotechEntityImpl" name="MessageRequestImpl" table="Request">
    <property name="recipientName"/>
    <property name="language"/>
    <property name="schedule"/>
    <property name="status" type="mStatus" update="false" access="field"/>
    <property name="p13nData"/>
    <property name="notificationType"/>
    <property name="recipientNumber"/>
    <property name="dateCreated" type="date"/>
    <property name="dateProcessed" type="date"/>
    <property name="dateFrom" type="date"/>
    <property name="dateTo" type="date"/>
    <property name="maxTryNumber"/>
    
  </union-subclass>
</hibernate-mapping>
