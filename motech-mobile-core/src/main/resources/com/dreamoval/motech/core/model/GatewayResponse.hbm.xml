<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dreamoval.motech.core.model">
  <union-subclass extends="MotechEntityImpl" name="GatewayResponseImpl" table="message_response">
    <property name="gatewayMessageId"/>
    <property name="recipientNumber"/>
    <property name="messageStatus" type="mStatus" update="false" access="field"/>
    <property name="responseText"/>
    <many-to-one class="GatewayRequestImpl" name="messageId"/>
    <set cascade="all" name="transitions">
      <key column="responseId"/>
      <one-to-many class="TransitionImpl"/>
    </set>
  </union-subclass>
</hibernate-mapping>
