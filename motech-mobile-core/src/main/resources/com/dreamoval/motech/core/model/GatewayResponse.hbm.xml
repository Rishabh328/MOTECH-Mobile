<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dreamoval.motech.core.model">
  <union-subclass extends="MotechEntityImpl" name="GatewayResponseImpl" table="gateway_response">
    <property name="gatewayMessageId" type="string" column="gateway_message_id"/>
    <property name="requestId" type="string" column="request_id"/>
    <property name="recipientNumber" type="string" column="recipient_number"/>
    <property name="messageStatus" type="mStatus" access="field" column="message_status"/>
    <property name="responseText" type="string" column="response_text" length="700"/>
    <property name="dateCreated" >
        <column name="date_created" sql-type="datetime" />
    </property>
    <many-to-one class="GatewayRequestImpl" name="gatewayRequest" column="message_id" />
    <set name="transitions" cascade="all">
      <key column="gateway_response_id"/>
      <one-to-many class="TransitionImpl"/>
    </set>
  </union-subclass>
</hibernate-mapping>
