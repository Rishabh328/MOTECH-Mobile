<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dreamoval.motech.core.model">
  <union-subclass extends="MotechEntityImpl" name="GatewayRequestDetailsImpl" table="gateway_request_details">
    <property name="messageType" type="messageType" column="message_type"/>
    <property name="message" type="string" column="message"/>
    <property name="numberOfPages" type="integer" column="number_of_pages"/>
    <set name="gatewayRequests" cascade="all" >
        <key column="request_id"/>
        <one-to-many class="GatewayRequestImpl"/>
    </set>
  </union-subclass>
</hibernate-mapping>
