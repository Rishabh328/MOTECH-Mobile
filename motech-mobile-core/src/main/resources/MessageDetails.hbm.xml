<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.dreamoval.motech.core.model.MessageDetailsImpl">
    <id name="messageId">
      <generator class="assigned"/>
    </id>
    <property name="messageType"/>
    <property name="numberOfPages"/>
    <property name="messageText"/>
    <property name="recipientsNumbers"/>
    <property name="globalStatus"/>
    <property name="dateSent" type="timestamp"/>
    <set name="responseDetails">
      <key column="messageId"/>
      <one-to-many class="com.dreamoval.motech.core.model.ResponseDetailsImpl"/>
    </set>
  </class>
</hibernate-mapping>
