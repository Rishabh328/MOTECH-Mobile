<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dreamoval.motech.core.model">
  <union-subclass extends="MotechEntityImpl" name="MessageDetailsImpl">
    <property name="messageType"/>
    <property name="numberOfPages"/>
    <property name="messageText"/>
    <property name="recipientsNumbers"/>
    <property name="globalStatus"/>
    <property name="dateSent" type="timestamp"/>
    <set name="responseDetails" cascade="all">
      <key column="messageId"/>
      <one-to-many class="ResponseDetailsImpl"/>
    </set>
  </union-subclass>
</hibernate-mapping>
